                Label:
                Label:
                    text:"Hop Weight(oz): "
                    font_size: (root.width + root.height) / 100
                Label:
                Label:
                    text:"Hop Alpha Acid(whole number%): "
                    font_size: (root.width + root.height) / 100
                Label:
                
            GridLayout:
                rows: 8
                TextInput:
                    id: hopname
                    multiline: False
                    font_size: (root.width + root.height) / 100
                Label:
                TextInput:
                    id: hoptiming
                    multiline: False
                    font_size: (root.width + root.height) / 100
                Label:
                TextInput:
                    id: hopweight
                    multiline: False
                    font_size: (root.width + root.height) / 100
                Label:
                TextInput:
                    id: hopacid
                    multiline: False
                    font_size: (root.width + root.height) / 100
                Label:
            
        GridLayout:
            cols: 1
            size_hint: 0.20, 0.20
            
            Button:
                pos_hint:{"x":0.3,"y":0.25}
                size_hint: 0.1, 0.1
                font_size: (root.width + root.height) / 75
                text: "Add Hop Profile"
                on_release:
                    root.submithop()
            Button:
                pos_hint:{"x":0.3,"y":0.25}
                size_hint: 0.1, 0.1
                font_size: (root.width + root.height) / 75
                text: "Finalize Recipe"
                on_release:
                    root.manager.transition.direction = "left"
                    root.submitrecipe()
        
