<WelcomeWindow>:
    name: "Welcome"


    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height

            Label:
                text: "Welcome To Brew Timer and Calculator"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width + root.height) / 50


            Button:
                pos_hint:{"x":0.2,"y":0.5}
                size_hint: 0.6, 0.15
                font_size: (root.width + root.height) / 50
                text: "Create a New Recipe"
                on_release:
                    root.manager.transition.direction = "left"
                    root.Create()

            Button:
                pos_hint:{"x":0.2,"y":0.25}
                size_hint: 0.6, 0.15
                text: "Load a Previous Recipe"
                font_size: (root.width + root.height) / 50
                on_release:
                    root.manager.transition.direction = "left"
                    root.Load()


<LoadPreviousRecipe>:
    name: "load"

    FloatLayout:

        Label:
            text:"Choose a recipe from the list below: "
            font_size: (root.width + root.height) / 50
            pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.35, 0.15

        CustomDropDown:
            pos_hint:{"x":0.22,"y":0.20}
            size_hint: 0.50, 0.50
            Button:
                text: 'My first Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item1')
            Button:
                text: 'My second Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item2')
            Button:
                text: 'My Third Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item2')
            Button:
                text: 'My Fourth Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item2')
            Button:
                text: 'My Fifth Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item2')
            Button:
                text: 'My Sixth Item'
                size_hint_y: None
                height: 44
                on_release: root.select('item2')
        
        Button:
            pos_hint:{"x":0.33,"y":0.10}
            size_hint: 0.3, 0.05
            font_size: (root.width + root.height) / 75
            text: "Return To Home"
            on_release:
                root.manager.transition.direction = "right"
                root.ReturnHome()
                
                
<CreateRecipeWindow>:
    name: "Create Recipe"

    recipename: recipename
    finalvolume: finalvolume
    preboilgravity: preboilgravity
    boiltime: boiltime

    GridLayout:
        cols: 1

        Label:
            text:"Create a new Recipe Below: "
            font_size: (root.width + root.height) / 50
            size_hint: 0.05, 0.05               
                
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            Label:
                text:"Recipe Name: "
                font_size: (root.width + root.height) / 50                
            TextInput:
                id: recipename
                multiline: False
                font_size: (root.width + root.height) / 50
            Label:
                text:"Final Volume Desired: "
                font_size: (root.width + root.height) / 50
            TextInput:
                id: finalvolume
                multiline: False
                font_size: (root.width + root.height) / 50
            Label:
                text:"Predicted pre-Boil Gravity "
                font_size: (root.width + root.height) / 50
            TextInput:
                id: preboilgravity
                multiline: False
                font_size: (root.width + root.height) / 50
            Label:
                text:"Total Boil Time(min): "
                font_size: (root.width + root.height) / 50
            TextInput:
                id: boiltime
                multiline: False
                font_size: (root.width + root.height) / 50
                  
        
        GridLayout:
            cols: 1
            size_hint: 0.05, 0.05
            Button:
                pos_hint:{"x":0.3,"y":0.25}
                size_hint: 0.1, 0.1
                font_size: (root.width + root.height) / 75
                text: "Continue to Hop Additions"
                on_release:
                    root.submit()
                    root.manager.transition.direction = "left"
            Button:
                pos_hint:{"x":0.3,"y":0.25}
                size_hint: 0.1, 0.1
                font_size: (root.width + root.height) / 75
                text: "Return To Home"
                on_release:
                    root.manager.transition.direction = "right"
                    root.ReturnHome()
                    


<AddHopsWindow>
